---
import BaseLayout from "@layouts/BaseLayout.astro"
import Button from "@components/Button.astro";
---

<BaseLayout>
  <script is:inline src="/getLatest.js"></script>
  <div class="bg-gray-900 py-16">
    <div class="container mx-auto px-4 max-w-4xl">
      <h1 class="text-4xl font-bold text-center text-white mb-8">Download ArmCord for Linux</h1>
      <h2 class="text-2xl font-semibold text-white mb-8 text-center">Choose your preferred installation method:</h2>
      <div class="space-y-8">
        <div>
          <h3 class="text-xl font-semibold text-white mb-4 text-center">Package Managers</h3>
          <div class="grid grid-cols-1 md:grid-cols-2 gap-6">
            <Button name="Flatpak" href="https://flathub.org/apps/details/xyz.armcord.ArmCord" description="Universal Linux package" />
            <Button name="AUR" href="https://aur.archlinux.org/packages/armcord-bin" description="Arch User Repository" />
          </div>
        </div>
        <div>
          <h3 class="text-xl font-semibold text-white mb-4 text-center">Direct Downloads</h3>
          <div class="grid grid-cols-1 md:grid-cols-2 gap-6">
            <Button name="AppImage" href={`https://github.com/ArmCord/ArmCord/releases/download/vVERSIONNUM/ArmCord-VERSIONNUM.AppImage`} description="Portable Linux application" />
            <Button name="Debian/Ubuntu" href={`https://github.com/ArmCord/ArmCord/releases/download/vVERSIONNUM/armcord_VERSIONNUM_amd64.deb`} description=".deb package for Debian-based distributions" />
          </div>
        </div>
      </div>
      <div class="mt-8 text-center">
        <p class="text-gray-300">
          For other Linux distributions or more information, please visit our <a href="https://github.com/ArmCord/ArmCord" class="text-blue-400 hover:underline">GitHub repository</a>.
        </p>
      </div>
    </div>
  </div>
</BaseLayout>