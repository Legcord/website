---
import BaseLayout from "@layouts/BaseLayout.astro"
import Button from "@components/Button.astro";
---

<BaseLayout>
  <script is:inline src="/getLatest.js"></script>
  <div class="bg-gray-900 py-16">
    <div class="container mx-auto px-4 max-w-4xl">
      <h1 class="text-4xl font-bold text-center text-white mb-8">Download ArmCord for Linux</h1>
      <h2 class="text-2xl font-semibold text-white mb-8 text-center">Choose your preferred installation method:</h2>
      <div class="space-y-8">
        <div>
          <h3 class="text-xl font-semibold text-white mb-4 text-center">Package Managers</h3>
          <div class="grid grid-cols-1 md:grid-cols-2 gap-6">
            <Button name="Flatpak" href="https://flathub.org/apps/details/xyz.armcord.ArmCord" description="Universal Linux package" />
            <Button name="AUR" href="https://aur.archlinux.org/packages/armcord-bin" description="Arch User Repository" />
            <Button name="Debian/Ubuntu" href="https://github.com/ArmCord/ArmCord?tab=readme-ov-file#debian-ubuntu-and-raspbian-repository" description="Official APT repository" />
            <Button name="Snap" href="https://snapcraft.io/armcord" description="Containerised snap" />
          </div>
        </div>
        <div>
          <h3 class="text-xl font-semibold text-white mb-4 text-center">Direct Downloads</h3>
          <div class="grid grid-cols-1 md:grid-cols-2 gap-6">
            <Button name="Github Releases" href={`https://github.com/ArmCord/ArmCord/releases/tag/vVERSIONNUM`} description="RPM/AppImage/debs/tarballs and more." />
          </div>
        </div>
      </div>
      <div class="mt-8 text-center">
        <p class="text-gray-300">
          For other package managers, please visit our <a href="https://github.com/ArmCord/ArmCord" class="text-blue-400 hover:underline">GitHub repository</a>.
        </p>
      </div>
    </div>
  </div>
</BaseLayout>