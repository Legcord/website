---
import BaseLayout from "@layouts/BaseLayout.astro"
import Button from "@components/Button.astro";
---

<BaseLayout>
  <div class="bg-gray-900 py-16">
    <div class="container mx-auto px-4 max-w-4xl">
      <h1 class="text-4xl font-bold text-center text-white mb-8">Download ArmCord for Windows</h1>
      <h2 class="text-2xl font-semibold text-white mb-6 text-center">Choose your Windows version:</h2>
      <div class="grid grid-cols-1 md:grid-cols-2 gap-6">
        <Button name="Windows 10/11+" href="/download/windows/exe" description="For modern Windows versions" />
        <Button name="Windows 7/8.1" href="https://github.com/ArmCord/ArmCord/releases/tag/legacybuild" description="For older Windows versions" />
      </div>
      <div class="mt-8 text-center">
        <p class="text-gray-300">
          Not sure which version you're running? 
          <a href="https://support.microsoft.com/en-us/windows/which-version-of-windows-operating-system-am-i-running-628bec99-476a-2c13-5296-9dd081cdd808" class="text-blue-400 hover:underline" target="_blank" rel="noopener noreferrer">
            Check your Windows version
          </a>
        </p>
      </div>
    </div>
  </div>
</BaseLayout>