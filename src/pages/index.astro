---
import BaseLayout from "@layouts/BaseLayout.astro";
import Hero from "@components/Hero.astro";
import FeatureCard from "@components/FeatureCard.astro";
import ImageModal from "@components/ImageModal.astro";
---

<BaseLayout>
  <Hero />
  <section class="py-20 bg-gray-800">
    <div class="container mx-auto px-4">
      <h2 class="text-3xl font-bold mb-12 text-center">Key Features</h2>
      <div class="grid grid-cols-1 md:grid-cols-3 gap-8">
        <FeatureCard 
          title="Customizable" 
          description="Customize your Discord experience with themes and transparency options."
          emoji="artist-palette"
          image="/transparency.jpg"
        />
        <FeatureCard 
          title="Built-in Client Mods" 
          description="Enjoy a smooth modded Discord experience without sacrificing performance."
          emoji="feather"
          image="/win10.jpg"
        />
        <FeatureCard 
          title="Cross-Platform" 
          description="Works on Windows, macOS, and Linux, including ARM devices."
          emoji="desktop-computer"
          image="/vista.png"
        />
      </div>
    </div>
  </section>
  
  <ImageModal id="modal-customizable" image="/transparency.jpg" title="Customizable" />
  <ImageModal id="modal-lightweight" image="/win10.jpg" title="Lightweight" />
  <ImageModal id="modal-cross-platform" image="/vista.png" title="Cross-Platform" />
  
  <section class="py-20 bg-gray-900">
    <div class="container mx-auto px-4">
      <h2 class="text-3xl font-bold mb-12 text-center text-white">ArmCord is great for...</h2>
      <div class="grid grid-cols-1 md:grid-cols-2 lg:grid-cols-4 gap-8 mb-16">
        <FeatureCard 
          title="Casual users"
          description="ArmCord is built specifically for ease of use. You no longer have to deal with the hassle of installing mods. Just download, run and pick what suits you the best!"
          emoji="person"
        />
        <FeatureCard 
          title="Gamers"
          description="Are you tired of Discord app taking your precious ram in the background? Try out ArmCord, it's much lighter and detects your games like a charm!"
          emoji="video-game"
        />
        <FeatureCard 
          title="Developers"
          description="ArmCord is completely open source, you can create themes and plugins for it. It's very hackable and doesn't block you to look what's inside."
          emoji="technologist"
        />
        <FeatureCard 
          title="Linux users"
          description="Are you tired of the official app being sluggish, unresponsive and not working properly? Try out ArmCord! It's built with Linux in mind and works flawlessly."
          emoji="penguin"
        />
      </div>
      
      <h2 class="text-3xl font-bold mb-12 text-center text-white">
        <span class="bg-clip-text text-transparent bg-gradient-to-r from-blue-200 to-purple-300">
          Bonus Features
        </span>
      </h2>
      <div class="grid grid-cols-1 md:grid-cols-2 lg:grid-cols-4 gap-8">
        <FeatureCard 
          title="Made for Privacyâ„¢"
          description="ArmCord automatically blocks all of Discord's trackers; even without any client mods, you can feel safe and secure! We also don't collect any data from you."
          emoji="shield"
        />
        <FeatureCard 
          title="Much more stable"
          description="ArmCord is using a newer build of Electron than the stock Discord app. This means you can have a much more stable and secure experience, along with slightly better performance."
          emoji="check-mark-button"
        />
        <FeatureCard 
          title="Mobile support"
          description="ArmCord has experimental mobile/touch support for phones running Linux such as the PinePhone. While this is still far from an ideal solution, we're slowly trying to improve it."
          emoji="mobile-phone"
        />
        <FeatureCard 
          title="Standalone client"
          description="ArmCord is built as a standalone client and doesn't rely on the original Discord client in any way. No Discord code here and no injectors!"
          emoji="desktop-computer"
        />
      </div>
    </div>
  </section>
</BaseLayout>